<h3>スケジュール編集</h3>

<%=render "shared/error",obj:@plan%>

<%=form_with model:@plan do|f|%>
    <table>
        <tr>
            <th><%=f.label:title,"タイトル"%></th>
            <td><%=f.text_field:title%></td>
        </tr>
        <tr>
            <th><%=f.label:startday,"開始日"%></th>
            <td><%=f.date_field:startday%></td>
        </tr>
        <tr>
            <th><%=f.label:finishday,"終了日"%></th>
            <td><%=f.date_field:finishday%></td>
        </tr>
        <tr>
            <th><%=f.label:allday,"終日"%></th>
            <td><%=f.check_box:allday%></td>
        </tr>
        <tr>
            <th><%=f.label:planmemo,"スケジュールメモ"%></th>
            <td><%=f.text_area:planmemo%></td>
        </tr>
    </table>

    <div>
        <ul>
            <li><%=f.submit "スケジュールの編集を完了する"%></li>
            <li><%=link_to "スケジュール一覧に戻る",plans_path%></li>
        </ul>
    </div>
<%end%>